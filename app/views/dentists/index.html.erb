
<h2>Dentist List</h2>
<% @dentists.each do |dentist| %>
    <p>No. <%=dentist.id %> <%=link_to "#{dentist.name}", "/dentists/#{dentist.id}"%> Created on: <%=dentist.nice_date %></p>
    <p><%= link_to "Edit #{dentist.name}","/dentists/#{dentist.id}/edit" %>
    <%= link_to "Delete #{dentist.name}","/dentists/#{dentist.id}", method: :delete %></p> 
<% end %>
<%= link_to "New Dentist","/dentists/new" %>
<%= link_to "Show Dentists by Number of Patients","/dentists?order=patients_number" %>

<%= form_with url: "/dentists", method: :get, local:true do |f|%>
    <%= f.label :search_by_full_name%>
    <%= f.text_area :search_by_full_name%>
    <%= f.submit "Submit" %>
<% end %>