
<h2>Patient list</h2>
<% @patients.each do |patient| %>
    <h4>Patient No. <%= patient.id %></h4>
    <p>Name: <%=patient.name%></p>    
    <p>Age: <%=patient.age%></p>
    <p>Insurance carrier: <%=patient.insurance_carrier%></p>
    <p>Referred by: <%=patient.referred_by%></p>
    <p>Referred by another patient: <%=patient.referred_by_another_patient%></p>
    <p>Dentist id: <%=patient.dentist_id%></p>
    <%= link_to "Edit #{patient.name}","/patients/#{patient.id}/edit" %>
    <%= link_to "Delete #{patient.name}","/patients/#{patient.id}", method: :delete %>
<% end %>

<%= form_with url: "/patients", method: :get, local:true do |f|%>
    <%= f.label :search_by_partial_name%>
    <%= f.text_area :search_by_partial_name%>
    <%= f.submit "Submit" %>
<% end %>